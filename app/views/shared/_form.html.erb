<%= form_for(@thing) do |f| %>
  <% if @thing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@thing.errors.count, "error") %> prohibited this thing from being saved:</h2>

      <ul>
      <% @thing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    Type<br>
    <%= f.select(:thing_type_id, ThingType.all.collect{ |t| [ t.name, t.id ] }) %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    Picture:<br>
    <%= f.file_field :avatar %>
  </div>
  <div class="field">
    Beacon UUID:<br>
    <%= f.text_field :uuid %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :age %><br>
    <%= f.text_field :age %>
  </div>
  <%= f.hidden_field :user_id, :value => @user.id%>
  <%= f.hidden_field :isMissing, :value => false %>
  <div class="actions">
      <%= f.submit :class => "button"%>
  </div>
<% end %>
